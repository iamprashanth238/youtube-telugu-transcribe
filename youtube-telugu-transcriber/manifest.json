{
    "manifest_version": 3,
    "name": "YouTube Telugu Transcriber",
    "description": "Generate Telugu transcriptions for YouTube videos.",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent"],
    "host_permissions": ["http://localhost:5000/*"],
    
    "action": {
      "default_title": "Generate Telugu Transcription",
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  